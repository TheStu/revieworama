<% provide(:title, "#{plural_name(@user.name)} Profile Page") %>
<% provide(:desc, "Revieworama profile page for user #{@user.name}") %>

<h1><%= "#{plural_name(@user.name)} Profile Page" %></h1>

<div class="row">
  <div class="span3">
    <div class="user-s-avatar">
      <%= image_tag avatar_url(@user, 270) %>
    </div>
  </div>
  <div class="span9">
    <%= link_to "Edit User", edit_user_registration_path(@user), class: 'btn' %>
  </div>
</div>

